class Solution {
public:
    int longestSubarray(vector<int>& nums) {
        int zero = 0;
        int long1 = 0;
        int st = 0;
        for(int i=0; i<nums.size(); i++)
        {
            zero += (nums[i] == 0);

            while(zero > 1)
            {
                zero -= (nums[st] == 0);
                st++;
            }
            long1 = max(long1, i-st);
        }
        return long1;
    }
};
